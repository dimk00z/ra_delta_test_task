# Database Configuration
PYTHONPATH=.

DB_HOST=db
MYSQL_DATABASE=delivery
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_ROOT_PASSWORD=rootpassword
DATABASE_URL=mysql+pymysql://${MYSQL_USER}:${MYSQL_ROOT_PASSWORD}@${DB_HOST}/${MYSQL_DATABASE}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
